@model IEnumerable<OnlineStudentManagementSystem.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
}

<h2>Users</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-info">Manage Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>